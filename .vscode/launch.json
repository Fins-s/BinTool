    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: 'BinTool.py' with args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/BinTool.py",
            "console": "integratedTerminal",
            "args": [
                "a.out", 
                "-d", "debug1234567890123456789012345678901234567890", "1234567890123456789012345678901234567890", 
                "-d", "debug2", "2"
            ]
        },
        {
            "name": "Python Debugger: Module test_env",
            "type": "debugpy",
            "request": "launch",
            "module": "bintoollib.test_env"
        }
    ]
}